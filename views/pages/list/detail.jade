extends ../../include/layout

block content
	include ../../include/header
	.container
		.row
			.col-md-2.col-md-offset-1
				a.btn.back(href="#",style="font-size:18px") 返回
		.row
			.col-md-4.col-md-offset-4
				h4 名称：#{list.name}
				h4 金额：#{list.amount}
				h4 分类：#{list.category.name}
				h4 收支：#{list.type}
				h4 具体内容：#{list.content}
				h4 日期：#{moment(list.createAt).format('YYYY-MM-DD')}
				h4 收据：
					div(style="border-radius:3px;width:100px;height:100px;display:inline-block;border:1px solid gray;vertical-align:top;")
		.row
			.col-md-4.col-md-offset-1
				h3 所有问答：
		.row
			.col-md-6.col-md-offset-3
				each comment in comments
					.media-list
						.media
							a(href="#").pull-left
								img(src="/images/dog.png").media-object
							.media-body
								h4(style="margin:0;color:blue").media-heading #{comment.from.name}：
								p #{comment.content}
								each reply in comment.reply
									.media
										a(href="#").pull-left
											img(src="/images/dog.png").media-object
										.media-body
											h4(style="margin:0;color:blue").media-heading #{reply.from.name}：
											p #{reply.content}